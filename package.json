{
  "name": "progressnet-fsa",
  "version": "1.0.1",
  "description": "Field Service Application - A comprehensive field service management system",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev": "./start-dev.sh",
    "start": "./start-dev.sh",
    "build": "npm run build --workspace=apps/backend && npm run build --workspace=apps/frontend",
    "lint": "npm run lint --workspace=apps/frontend",
    "lint:fix": "npm run lint --workspace=apps/frontend -- --fix",
    "setup": "npm install && npm run setup --workspace=apps/backend",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist apps/*/.next"
  },
  "keywords": [
    "field-service",
    "management",
    "react",
    "nextjs",
    "nodejs",
    "fastify",
    "mongodb"
  ],
  "author": "Aristech",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
